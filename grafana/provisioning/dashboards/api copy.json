{
  "title": "HTTP API Metrics",
  "refresh": "5s",
  "editable": true,
  "panels": [
    {
      "gridPos": {
        "h": 8,
        "w": 24,
        "x": 0,
        "y": 24
      },
      "id": 4,
      "title": "VARIABLE - Overall API p95 Latency - Current vs Last Week",
      "type": "timeseries",
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "palette-classic"
          },
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "linear",
            "spanNulls": false
          },
          "unit": "s"
        }
      },
      "options": {
        "legend": {
          "calcs": [
            "mean"
          ],
          "displayMode": "table",
          "placement": "right"
        }
      },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum by(le) (rate(http_request_duration_seconds_bucket[$__rate_interval])))",
          "legendFormat": "Current p95"
        },
        {
          "expr": "histogram_quantile(0.95, sum by(le) (rate(http_request_duration_seconds_bucket[$__rate_interval] offset 1w)))",
          "legendFormat": "Last Week p95"
        }
      ]
    },
    {
      "gridPos": {
        "h": 8,
        "w": 24,
        "x": 0,
        "y": 32
      },
      "id": 5,
      "title": "Week after week p95 Latency",
      "type": "table",
      "fieldConfig": {
        "defaults": {
          "custom": {
            "align": "auto",
            "displayMode": "auto"
          },
          "unit": "s",
          "decimals": 2,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "yellow",
                "value": 1
              },
              {
                "color": "red",
                "value": 2
              }
            ]
          }
        }
      },
      "options": {
        "showHeader": true
      },
      "targets": [
        {
          "expr": "label_replace(histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket[1w])) by (le)), 'period', 'Current Week', '', '') or label_replace(histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket[1w] offset 7d)) by (le)), 'period', 'Last Week', '', '') or label_replace(histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket[1w] offset 14d)) by (le)), 'period', '2 Weeks Ago', '', '') or label_replace(histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket[1w] offset 21d)) by (le)), 'period', '3 Weeks Ago', '', '')",
          "format": "table",
          "instant": true
        }
      ],
      "transformations": [
        {
          "id": "organize",
          "options": {
            "excludeByName": {
              "Time": true
            },
            "indexByName": {},
            "renameByName": {
              "Value": "p95 Latency (seconds)",
              "period": "Period"
            }
          }
        }
      ]
    },
    {
      "gridPos": {
        "h": 4,
        "w": 24,
        "x": 0,
        "y": 0
      },
      "id": 1,
      "title": "Week-over-Week p95 Change",
      "type": "stat",
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "threshold"
          },
          "thresholds": {
            "mode": "percentage",
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "red",
                "value": 0
              }
            ]
          },
          "unit": "percent",
          "decimals": 1
        }
      },
      "targets": [
        {
          "expr": "100 * (histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket[1w])) by (le)) / histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket[1w] offset 1w)) by (le)) - 1)",
          "legendFormat": "Change"
        }
      ]
    },
    {
      "gridPos": {
        "h": 8,
        "w": 24,
        "x": 0,
        "y": 4
      },
      "id": 2,
      "title": "Top 5 Slowest Endpoints - Weekly p95",
      "type": "table",
      "fieldConfig": {
        "defaults": {
          "custom": {
            "align": "auto",
            "displayMode": "auto"
          },
          "decimals": 3,
          "unit": "s"
        },
        "overrides": [
          {
            "matcher": {
              "id": "byName",
              "options": "Requests/sec"
            },
            "properties": [
              {
                "id": "unit",
                "value": "reqps"
              },
              {
                "id": "decimals",
                "value": 1
              }
            ]
          },
          {
            "matcher": {
              "id": "byName",
              "options": "Change %"
            },
            "properties": [
              {
                "id": "unit",
                "value": "percent"
              },
              {
                "id": "decimals",
                "value": 1
              },
              {
                "id": "custom.displayMode",
                "value": "color-background"
              },
              {
                "id": "thresholds",
                "value": {
                  "mode": "percentage",
                  "steps": [
                    {
                      "color": "green",
                      "value": null
                    },
                    {
                      "color": "red",
                      "value": 0
                    }
                  ]
                }
              }
            ]
          }
        ]
      },
      "targets": [
        {
          "expr": "topk(5, histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket[1w])) by (le, route)))",
          "format": "table",
          "instant": true,
          "refId": "Current"
        },
        {
          "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket[1w] offset 1w)) by (le, route))",
          "format": "table",
          "instant": true,
          "refId": "Last"
        },
        {
          "expr": "sum(rate(http_requests_total[1w])) by (route)",
          "format": "table",
          "instant": true,
          "refId": "Traffic"
        }
      ],
      "transformations": [
        {
          "id": "merge",
          "options": {}
        },
        {
          "id": "calculateField",
          "options": {
            "alias": "Change %",
            "binary": {
              "left": "Current",
              "operator": "/",
              "reducer": "sum",
              "right": "Last"
            },
            "mode": "binary",
            "reduce": {
              "reducer": "sum"
            }
          }
        },
        {
          "id": "organize",
          "options": {
            "excludeByName": {
              "Time": true
            },
            "indexByName": {},
            "renameByName": {
              "Current": "Current Week p95",
              "Last": "Last Week p95",
              "Traffic": "Requests/sec",
              "route": "Endpoint"
            }
          }
        }
      ]
    },
    {
      "gridPos": {
        "h": 8,
        "w": 24,
        "x": 0,
        "y": 12
      },
      "id": 3,
      "title": "p95 Latency Heatmap by Hour",
      "type": "heatmap",
      "options": {
        "calculate": true,
        "calculation": {
          "xBuckets": {
            "mode": "size",
            "value": "1h"
          }
        },
        "color": {
          "mode": "scheme",
          "scheme": "RdYlBu"
        },
        "exemplars": {
          "color": "rgba(255,0,255,0.7)"
        },
        "legend": {
          "show": true
        },
        "tooltip": {
          "show": true,
          "yHistogram": false
        },
        "yAxis": {
          "format": "s",
          "decimals": 3
        }
      },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket[1h])) by (le, hour_of_day))",
          "legendFormat": "Current Week",
          "format": "heatmap"
        },
        {
          "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket[1h] offset 1w)) by (le, hour_of_day))",
          "legendFormat": "Last Week",
          "format": "heatmap"
        }
      ]
    }
  ],
  "time": {
    "from": "now-1w",
    "to": "now"
  }
}